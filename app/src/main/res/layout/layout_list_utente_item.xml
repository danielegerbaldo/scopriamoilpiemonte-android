<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="#2D00BCD4"
    android:id="@+id/item_body_utente">

    <TextView
        android:id="@+id/codice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Id:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/codice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="*Id*"
        app:layout_constraintBottom_toBottomOf="@+id/codice_text"
        app:layout_constraintStart_toEndOf="@+id/codice_text" />

    <TextView
        android:id="@+id/nome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nome:"
        app:layout_constraintStart_toStartOf="@+id/codice_text"
        app:layout_constraintTop_toBottomOf="@+id/codice_text" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="*Nome*"
        app:layout_constraintBottom_toBottomOf="@+id/nome_text"
        app:layout_constraintStart_toEndOf="@+id/nome_text" />

    <TextView
        android:id="@+id/cognome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cognome:"
        app:layout_constraintStart_toStartOf="@+id/nome_text"
        app:layout_constraintTop_toBottomOf="@+id/nome_text" />

    <TextView
        android:id="@+id/cognome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="*Cognome*"
        app:layout_constraintStart_toEndOf="@+id/cognome_text"
        app:layout_constraintTop_toTopOf="@+id/cognome_text" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status:"
        app:layout_constraintStart_toStartOf="@+id/cognome_text"
        app:layout_constraintTop_toBottomOf="@+id/cognome_text" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="*Status*"
        app:layout_constraintStart_toEndOf="@+id/status_text"
        app:layout_constraintTop_toTopOf="@+id/status_text" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/extra_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/cognome_text"
        app:layout_constraintTop_toBottomOf="@+id/cognome_text">

        <Button
            android:id="@+id/button_mod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Modificatore"
            app:backgroundTint="#FFC107"
            app:layout_constraintEnd_toStartOf="@+id/button_pos"
            app:layout_constraintTop_toTopOf="@+id/button_pos" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>